{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": ".ai/core/schemas/task_v1.json",
  "title": "NEXUS-7 Task Schema v1.0.0",
  "description": "Esquema para definición y estado de tareas",
  "type": "object",
  "required": ["id", "agent", "status", "content", "permissions", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Identificador único de la tarea",
      "pattern": "^task_[0-9]{10}_[a-f0-9]{8}$"
    },
    "agent": {
      "type": "string",
      "description": "Agente asignado",
      "enum": ["codex", "kimi", "gemini", "orchestrator"]
    },
    "status": {
      "type": "string",
      "description": "Estado actual de la tarea",
      "enum": ["pending", "running", "completed", "failed", "cancelled"]
    },
    "content": {
      "type": "string",
      "description": "Contenido/instrucciones de la tarea",
      "minLength": 1,
      "maxLength": 50000
    },
    "permissions": {
      "type": "object",
      "description": "Permisos de acceso para esta tarea",
      "properties": {
        "read": {
          "type": "array",
          "description": "Paths permitidos para lectura",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_/.\\*\\-]+$"
          }
        },
        "write": {
          "type": "array",
          "description": "Paths permitidos para escritura",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_/.\\*\\-]+$"
          }
        },
        "deny": {
          "type": "array",
          "description": "Paths explícitamente prohibidos",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_/.\\*\\-]+$"
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "description": "Timestamp de creación",
      "format": "date-time"
    },
    "started_at": {
      "type": ["string", "null"],
      "description": "Timestamp de inicio de ejecución",
      "format": "date-time"
    },
    "completed_at": {
      "type": ["string", "null"],
      "description": "Timestamp de finalización",
      "format": "date-time"
    },
    "content_hash": {
      "type": "string",
      "description": "Hash de verificación de integridad",
      "pattern": "^[a-f0-9]{16}$"
    },
    "retry_count": {
      "type": "integer",
      "description": "Número de reintentos realizados",
      "minimum": 0,
      "default": 0
    },
    "max_retries": {
      "type": "integer",
      "description": "Máximo de reintentos permitidos",
      "minimum": 0,
      "maximum": 10,
      "default": 3
    },
    "metadata": {
      "type": "object",
      "description": "Metadatos adicionales",
      "additionalProperties": true,
      "properties": {
        "skill_id": {
          "type": "string",
          "description": "ID del skill que activó esta tarea"
        },
        "triggered_by": {
          "type": "string",
          "description": "ID del mensaje o evento que originó la tarea"
        },
        "estimated_duration": {
          "type": "integer",
          "description": "Duración estimada en segundos"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "history": {
      "type": "array",
      "description": "Historial de transiciones de estado",
      "items": {
        "type": "object",
        "required": ["from", "to", "timestamp"],
        "properties": {
          "from": {
            "type": "string",
            "enum": ["pending", "running", "completed", "failed", "cancelled"]
          },
          "to": {
            "type": "string",
            "enum": ["pending", "running", "completed", "failed", "cancelled"]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    }
  },
  "definitions": {
    "validTransitions": {
      "description": "Transiciones de estado válidas",
      "type": "object",
      "properties": {
        "pending": {
          "type": "array",
          "items": {"enum": ["running", "cancelled"]}
        },
        "running": {
          "type": "array",
          "items": {"enum": ["completed", "failed", "cancelled"]}
        },
        "failed": {
          "type": "array",
          "items": {"enum": ["pending", "cancelled"]}
        },
        "completed": {
          "type": "array",
          "items": {"maxItems": 0}
        },
        "cancelled": {
          "type": "array",
          "items": {"maxItems": 0}
        }
      }
    }
  }
}
