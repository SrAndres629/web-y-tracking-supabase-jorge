{
    "version": 2,
    "cleanUrls": true,
    "trailingSlash": false,
    "images": {
        "sizes": [
            640,
            750,
            828,
            1080,
            1200,
            1920,
            2048
        ],
        "domains": [
            "jorgeaguirreflores.com"
        ],
        "formats": [
            "image/avif",
            "image/webp"
        ],
        "minimumCacheTTL": 60
    },
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": "{app,api/templates,static}/**"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/favicon.ico",
            "destination": "/static/assets/images/branding/luxury_logo.svg"
        },
        {
            "source": "/static/(.*)",
            "destination": "/static/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.py"
        }
    ],
    "headers": [
        {
            "source": "/static/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable, stale-while-revalidate=604800"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://jorgeaguirreflores.com"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "camera=(), microphone=(), geolocation=(), payment=(), usb=()"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=31536000; includeSubDomains; preload"
                }
            ]
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
}
