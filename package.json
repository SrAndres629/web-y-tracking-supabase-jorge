{
    "name": "jorge-aguirre-web-build",
    "version": "3.0.0",
    "private": true,
    "description": "Enterprise Build System for Jorge Aguirre Flores Web (Silicon Valley Architecture)",
    "main": "main.py",
    "scripts": {
        "dev": "run-p watch:css serve",
        "serve": "./venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
        "build": "run-s build:css",
        "build:css": "tailwindcss -i ./static/src/input.css -o ./static/dist/css/app.min.css --minify",
        "watch:css": "tailwindcss -i ./static/src/input.css -o ./static/dist/css/app.min.css --watch",
        "lint": "run-p lint:js lint:css",
        "lint:js": "eslint .",
        "lint:css": "stylelint \"static/**/*.css\"",
        "lint:fix": "run-s fix:js fix:css",
        "fix:js": "eslint . --fix",
        "fix:css": "stylelint \"static/**/*.css\" --fix",
        "format": "prettier --write .",
        "check": "run-p check:py",
        "check:py": "npx pyright",
        "test": "playwright test",
        "test:api": "./venv/bin/pytest",
        "audit:security": "npm audit",
        "audit:a11y": "node_modules/.bin/lighthouse http://localhost:8000"
    },
    "keywords": [
        "css",
        "build",
        "tailwind",
        "fastapi",
        "tracking"
    ],
    "author": "Jorge Aguirre Flores",
    "license": "UNLICENSED",
    "devDependencies": {
        "@anthropic-ai/claude-code": "^2.1.52",
        "@axe-core/playwright": "^4.11.1",
        "@google/jules": "^0.1.42",
        "@types/node": "^25.3.0",
        "autoprefixer": "^10.4.17",
        "concurrently": "^9.2.1",
        "eslint": "^10.0.0",
        "eslint-plugin-html": "^8.1.4",
        "genkit": "^1.29.0",
        "lighthouse": "^13.0.3",
        "npm-run-all": "^4.1.5",
        "playwright-core": "^1.58.2",
        "postcss": "^8.4.35",
        "prettier": "^3.8.1",
        "stylelint": "^17.3.0",
        "stylelint-config-standard": "^40.0.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.9.3",
        "zod": "^4.3.6"
    },
    "dependencies": {
        "@eslint/js": "^10.0.1",
        "globals": "^17.3.0",
        "pyright": "^1.1.408"
    }
}